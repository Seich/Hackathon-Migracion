    <h3>Transacciones Pendientes</h3>
    <table>
        <thead>
            <tr>
                <th>Fecha de Transacci√≥n</th>
                <th>Destinatario</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
        <% _.each(pendingTransactions, function (pt) {  %>
            <tr>
                <td><%= pt.transactionDate %></td>
