<div class="form-slim">
	<form action="/session/create" method="POST" class="form-signin">
		<h2 class="form-signin-heading">Iniciar Sesion</h2>
		<% if(flash && flash.err) { %>
			<p>Los siguientes errores surgieron: </p>
			<ul class="errors">
				<% Object.keys(flash.err).forEach(function(error){%>
					<li> <%= flash.err[error].message %></li>
				<%})%>
			</ul>
		<% } %>
		<label for="email">Correo Electrónico</label>
		<input type="text" name="email" id="email">
		<label for="password">Contraseña</label>
		<input type="password"  name="password" id="password">
		
		<footer>
			<input type="submit" value="Iniciar Sesion" class="btn" /> <em>o</em>
			<a href="/user/new">Registrarse</a>
		</footer>
	</form>
</div>
